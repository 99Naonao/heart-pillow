.container {
  background: #33244a;
  min-height: 100vh;
  padding: 0;
}

.top-space {
  height: 20rpx;
}

.pillow-img-wrapper {
  width: 90%;
  /* 高度用padding-top實現等比例，這裡60%是寬度的60% */
  padding-top: 60%;
  position: relative;
  margin: 0 auto 32rpx auto;
}

.pillow-img {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.10);
  background: #fff;
}

.device-bar {
  display: flex;
  align-items: center;
  background: #2a1e3a;
  border-radius: 16rpx;
  margin: 0 24rpx 32rpx 24rpx;
  padding: 2rpx;
  color: #fff;
  font-size: 28rpx;
  position: relative;
}

.icon-bluetooth {
  width: 32rpx;
  height: 32rpx;
  margin-left: 16rpx;
}

.device-text {
  flex: 1;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #00bfff;
  border-right: 4rpx solid #00bfff;
  transform: rotate(45deg);
  margin-right: 16rpx;
}

.card-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 24rpx;
}

.card {
  width: 46%;
  background: #2a1e3a;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  padding: 32rpx 0 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-height: 180rpx;
}

.card-header {
  width: 90%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  position: absolute;
  top: 24rpx;
  left: 5%;
}

.card-icon {
  width: 44rpx;
  height: 44rpx;
}

.card-title {
  font-size: 28rpx;
  color: #fff;
  font-weight: bold;
}

.card-value {
  margin-top: 72rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #b2eaff;
  align-items: center;
  text-align: center;
  width: 100%;
}