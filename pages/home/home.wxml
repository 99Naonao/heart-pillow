<!--pages/home.wxml-->
<nav-bar title="智能观心枕" showNavBtn="{{false}}"  bgColor="#35254F" titleColor="#fff"/>
<view class="container">
  <view class="top-space"></view>
  <view class="device-bar" bind:tap="toBlueIndex">
    <image src="../../static/bluetooth.png" class="icon-bluetooth"/>
    <text class="device-text">设备未连接</text>
    <view class="arrow"></view>
  </view>
  <view class="card-grid">
    <!-- 心率 -->
    <view class="card">
      <view class="card-header">
        <image src="../../static/heart_rate.png" class="card-icon"/>
        <text class="card-title">心率</text>
      </view>
      <view class="card-value">
        {{heartRate !== null ? heartRate + '次/分' : '--次/分'}}
      </view>
    </view>
    <!-- 呼吸 -->
    <view class="card">
      <view class="card-header">
        <image src="../../static/breath_rate.png" class="card-icon"/>
        <text class="card-title">呼吸</text>
      </view>
      <view class="card-value">
        {{breathRate !== null ? breathRate + '次/分' : '--次/分'}}
      </view>
    </view>
    <!-- 翻身次数 -->
    <view class="card">
      <view class="card-header">
        <image src="../../static/turn_over.png" class="card-icon"/>
        <text class="card-title">体动次数</text>
      </view>
      <view class="card-value">
        {{turnOver !== null ? turnOver + '次' : '--次'}}
      </view>
    </view>
    <!-- 是否离枕 -->
    <view class="card">
      <view class="card-header">
        <image src="../../static/leave.png" class="card-icon"/>
        <text class="card-title">是否离枕</text>
      </view>
      <view class="card-value">
        {{isLeavePillow !== null ? (isLeavePillow ? '是' : '否'):'--'}}
      </view>
    </view>
  </view>
</view>